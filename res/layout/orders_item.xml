<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="8dp"
    android:layout_margin="18dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/idtextordername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#03A9F4"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="product name" />

            <TextView
                android:id="@+id/idtxtpriceorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="183"
                android:layout_below="@id/idtextordername"
                android:gravity="center_horizontal"
                android:background="#03A9F4"
                android:textSize="18sp"
                android:textColor="@color/white"/>

        <TextView
            android:id="@+id/idtxtquantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idtxtpriceorder"
            android:layout_marginStart="10dp"
            android:background="#03A9F4"
            android:gravity="center_horizontal"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idnameofperson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idtxtquantity"
            android:background="#03A9F4"
            android:gravity="center_horizontal"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idcitynameofperson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idnameofperson"
            android:background="#03A9F4"
            android:gravity="center_horizontal"
            android:text="City name"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idhomeaddressofperson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idcitynameofperson"
            android:background="#03A9F4"
            android:gravity="center_horizontal"
            android:text="home address"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idphonenumberperson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idhomeaddressofperson"
            android:background="#03A9F4"
            android:gravity="center_horizontal"
            android:text="Phone number"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>