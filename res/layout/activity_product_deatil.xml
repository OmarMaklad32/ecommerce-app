<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    tools:context=".ProductDeatilActivity">

    <ImageView
        android:id="@+id/idimageproductdeatil"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idtextproductnamedeatal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        tools:text="Product Name"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/idimageproductdeatil"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/idtextproductndescrptiondeatal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        tools:text="Product descrption"
        android:textColor="#777575"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/idtextproductnamedeatal"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/idtextproductndescrptiondeatal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السعر :"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="#0E51D8"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/idtextproductnpricedeatal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#0E51D8"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="409dp"
            tools:text="190.9" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:background="#EDEDED"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/idimageminus"
                android:layout_width="78dp"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                android:src="@drawable/minus" />

            <TextView
                android:id="@+id/idtextamount"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                android:gravity="center_horizontal"
                android:paddingTop="4dp"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/idimageplus"
                android:layout_width="78dp"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                android:src="@drawable/add1" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/idbtnaddtocart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_addtocart"
        android:text="Add to cart"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.248" />

    <TextView
        android:id="@+id/idtxttotal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idbtnaddtocart" />


</androidx.constraintlayout.widget.ConstraintLayout>