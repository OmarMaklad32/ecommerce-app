<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    app:cardElevation="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@color/white"
    android:layout_height="280dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/idproductname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#1E1ED1"
            android:textSize="20dp"
            android:textStyle="bold"
            tool:text="Product Name" />

        <ImageView
            android:id="@+id/idimageproduct"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/idproductname"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/idtextproductdescrption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idimageproduct"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#1E1ED1"
            android:textSize="19dp"
            tool:text="this is product descrption" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/idtextproductdescrption"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textColor="#131313"
                android:textSize="20dp"
                android:text="السعر : "/>
            <TextView
                android:id="@+id/idtextproductprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textSize="19dp"
                android:layout_marginStart="10dp"
                android:textColor="#2196F3"
                tool:text="180 جنيه"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView >